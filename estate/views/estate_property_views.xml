<?xml version="1.0"?>
<odoo>
	<!--- ACTIONS -->
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Property</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
  </record>


	<!--- List (= index) -->
  <record id="estate_property_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree string="Property Test">
        <field name="name" string="Title"/>
        <field name="postcode" string="Postcode" />
        <field name="bedrooms"/>
        <field name="living_area" string="Living Area (sqm)" />
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability" string="Available From"/>
        <field name="property_type_id" string="Property type id"/>
      </tree>
    </field>
  </record>


  <!-- Search (= gérer les différentes manières de chercher le model )-->
  <record id="estate_serach_record" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" string="Title"/>
        <field name="description"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="bedrooms"/>
        <field name="living_area" string="Living Area (sqm)"/>
        <field name="facades"/>
        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
        <filter string="Number of Bedrooms" name="filter_bedrooms" context="{'group_by': 'bedrooms'}"/>
        <filter string="Postcode" name="filter_postcode" context="{'group_by': 'postcode'}"/>
        <filter name="available" string="Available Properties" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
      </search>
    </field>
  </record>



  <!-- Form  (= show + edit )-->
  <record id="estate_property_form" model="ir.ui.view">
    <field name="name">Estate</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Estate Property">
        <sheet>
          <div class="oe_title">
            <h1 class="mb32">
                <field placeholder="My New House" name="name" class="mb16"/> <!-- name=<nom du champ> -->
            </h1>
            <field name="active" invisible="1"/>
          </div>
          <group>
            <group>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="date_availability"/>
            </group>
            <group>
              <field name="expected_price"/>
              <field name="selling_price"/>
            </group>
          </group>
          <notebook>
            <page string="Description">
              <field name="description"/>
              <group>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
              </group>
            </page>
            <page string="Other info">
              <group>
                <field name="property_type_id"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>